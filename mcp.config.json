{
  "name": "MCP CV RAG Server",
  "description": "A memory-optimized Retrieval Augmented Generation (RAG) server for CV/resume analysis, using OpenAI and FastAPI.",
  "entry": "mcp_server.py",
  "language": "python",
  "python": {
    "venv": ".venv",
    "envFile": ".env"
  },
  "commands": [
    {
      "name": "Run MCP Server",
      "command": "python mcp_server.py"
    },
    {
      "name": "Run REST API",
      "command": "python rest_api.py"
    },
    {
      "name": "Ingest Documents",
      "command": "python ingest.py"
    }
  ],
  "ports": [8000],
  "docs": "README.md"
}

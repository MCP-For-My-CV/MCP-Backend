      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Run Ingest Script",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/ingest.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}

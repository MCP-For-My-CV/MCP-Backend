{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run REST API (FastAPI)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/rest_api.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Run MCP Server",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/mcp_server.py",
